{
	"compilerOptions": {
		"allowJs": true,
		"target": "ES6",
		"module": "ES6",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"outDir": "./dist",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"lib": ["ES2015", "DOM", "DOM.Iterable"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "dist", "__test__"]
}
